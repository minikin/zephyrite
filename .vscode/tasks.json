{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": "test",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo clippy",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clippy",
                "--",
                "-D",
                "warnings"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo fmt",
            "type": "shell",
            "command": "cargo",
            "args": [
                "fmt"
            ],
            "group": "build"
        },
        {
            "label": "cargo watch (run)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "watch",
                "-x",
                "run"
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo watch (test)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "watch",
                "-x",
                "test"
            ],
            "group": "test",
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "dev workflow",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cargo fmt",
                "cargo clippy",
                "cargo test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
